@page "/chargers"
@using smart.charger.webui.Models.DTOs.Chargers
@inherits ChargersViewModel

<div class="videos">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <h3 class="card-header">Chargers</h3>
                <div class="card-body">
                    <div class="row">
                        @* <div class="form-group"> *@
                        @*     <TelerikButton Enabled="@SaveBtnEnabled" Primary="true" Icon="add" *@
                        @*         OnClick="@OnSaveClickHandler">Add</TelerikButton> *@
                        @*     <TelerikButton Icon="edit" OnClick="@OnCancelClickHandler">Edit</TelerikButton> *@
                        @*     <TelerikButton Icon="delete" OnClick="@OnCancelClickHandler">Delete</TelerikButton> *@
                        @* </div> *@
                    </div>
                    <div class="row">
                        <TelerikGrid Data="@ChargerState.Value.ChargerList" Pageable="true" PageSize="10" Height="600px"
                            PageChanged="@PageChangedHandler" Sortable="true" SelectionMode="GridSelectionMode.Single"
                            SelectedItemsChanged="@((IEnumerable<ChargerDto> chargerList) => OnSelect(chargerList))"
                            SelectedItems="@SelectedItems" Reorderable="true" Resizable="true" Groupable="false"
                            FilterMode="GridFilterMode.FilterRow">
                            <GridColumns>
                                <GridColumn Field="@(nameof(ChargerDto.Id))" Visible="false" Title="Id" Groupable="false" />
                                <GridColumn Field="@(nameof(ChargerDto.Brand))" Title="Brand" Groupable="false" />
                                <GridColumn Field="@(nameof(ChargerDto.MaxPower))" Title="Max Power"
                                    Groupable="false" />
                                @* <GridColumn Field="@(nameof(ChargerDto.InUse))" Title="Current Status" *@
                                @*     Groupable="false" /> *@
                                <GridColumn Field="@(nameof(ChargerDto.SerialNumber))" Title="Serial Number"
                                    Groupable="false" />
                            </GridColumns>
                        </TelerikGrid>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
